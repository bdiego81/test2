_spinnerEstado = (Spinner) findViewById(R.id.spinnerEstado);
		_spinnerEstado.setOnItemSelectedListener(new AdapterView.OnItemSelectedListener() {

			@Override
			public void onItemSelected(AdapterView<?> parent, View view, int position, long id) {
				String Estado = ((SpinnerObject2) _spinnerEstado.getSelectedItem()).getId();
				Log.d(TAG, "Estado -> " + Estado);

					List<ActaHormigon> _actas = new ArrayList<ActaHormigon>();
					for (ActaHormigon ah : actas) {
						if(!Estado.equals("-TODAS-")) {
							if (ah.Estado.equals(Estado)) {
								_actas.add(ah);
							}
						}else {
							_actas.add(ah);
						}
					}
					MySimpleArrayAdapter adapter2 = new MySimpleArrayAdapter(getApplicationContext(), _actas);
					setListAdapter(adapter2);
					adapter2.notifyDataSetChanged();
			}

			@Override
			public void onNothingSelected(AdapterView<?> parent) {
				Log.d(TAG, "$provinces::OnItemSelectedListener::onNothingSelected()");
			}
		});
